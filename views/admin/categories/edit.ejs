<body>
    <%- include('../../partials/navbar.ejs')%>
    <div class="container">
        <hr>
        <div class="card">
            <div class="card-header">
                <h1>Edição de categoria</h1>
            </div>
            <div class="card-body">
                <form method="post" action="/categories/update">
                    <input type="hidden" name="id" value="<%= category.id %>">
                    <input class="form-control" type="text" name="title" id="title" placeholder="Defina o titulo da categoria" value="<%= category.title %>"><br>
                    <button class="btn btn-success">Atualizar</button>
                </form>
            </div>
        </div> 
    </div>
</body>
