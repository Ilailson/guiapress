<%- include('../../partials/header.ejs')%>
<body>
    <%- include('../../partials/navbar.ejs')%>
    <div class="container">
        <hr>
        <div class="card">
            <div class="card-header">
                <h1>Edição de Usuários</h1>
            </div>
            <div class="card-body">
                <form method="post" action="/users/update">
                    <input type="hidden" name="id" value="<%= users.id %>">
                    <input class="form-control" type="email" name="email" id="email" value="<%= users.email %>"><br>
                    <input type="password" name="password" class="form-control" value="<%= users.password %>""> <br>
                    <button class="btn btn-success">Atualizar</button>
                </form>
            </div>
        </div> 
    </div>
</body>
